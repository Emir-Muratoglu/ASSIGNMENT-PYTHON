old_name = 'emir'.title().strip()

new_name = input('Please enter your name : ').title().strip()
password = "Clarusway"

if old_name == new_name:
  print(f"Hello, {old_name}!")
  print(f"The password is: {password}")
else:
  print(f"Hello, {new_name}! See you later.")
  
  
 # OUTPUT
 
 Please enter your name : EMIR
Hello, Emir!
The password is: Clarusway
